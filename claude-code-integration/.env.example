# Claude Code Integration & Validation Engine - Environment Configuration
# Copy this file to .env and update with your actual values

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.1

# Database Configuration
DATABASE_URL=postgresql://validation:your_password@localhost:5432/claude_validation
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Container Runtime Configuration
CONTAINER_RUNTIME=gvisor  # Options: docker, gvisor, kata, podman
ENABLE_NETWORK_ISOLATION=true
MAX_EXECUTION_TIME=300
MAX_MEMORY_MB=1024
MAX_CPU_CORES=2

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
ENABLE_AUDIT_LOGGING=true

# Platform Integration Tokens
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
GITHUB_APP_ID=your_github_app_id_here
GITHUB_PRIVATE_KEY_PATH=/path/to/github/private/key.pem
GITHUB_INSTALLATION_ID=your_github_installation_id_here

GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret_here

JENKINS_URL=https://your-jenkins.com
JENKINS_USERNAME=your_jenkins_username
JENKINS_TOKEN=your_jenkins_token_here

AZURE_DEVOPS_ORG=your_azure_devops_org
AZURE_DEVOPS_PROJECT=your_azure_devops_project
AZURE_DEVOPS_TOKEN=your_azure_devops_token_here

CIRCLECI_TOKEN=your_circleci_token_here

# Monitoring and Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SMTP_SERVER=smtp.gmail.com
GRAFANA_PASSWORD=your_grafana_password_here

# Backup Configuration
BACKUP_BUCKET=your_s3_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Machine Learning Configuration
ML_MODEL_PATH=./ml-models
ENABLE_LEARNING=true
CONFIDENCE_THRESHOLD=0.8
RETRAIN_INTERVAL_HOURS=168

# Development Configuration
DEBUG_MODE=false
LOG_LEVEL=INFO
ENABLE_TEST_FIXTURES=false
MOCK_CLAUDE_API=false
SKIP_CONTAINER_ISOLATION=false

# Feature Flags
EXPERIMENTAL_ML_MODELS=false
ADVANCED_SECURITY_SCANNING=true
PERFORMANCE_PROFILING=true
AUTO_FIX_APPLICATION=false
MULTI_LANGUAGE_SUPPORT=true
CUSTOM_RULE_ENGINE=true
API_RATE_LIMITING=true

# Performance Configuration
MAX_CONCURRENT_VALIDATIONS=10
CACHE_TTL_HOURS=24
ENABLE_CACHING=true
PARALLEL_EXECUTION=true

# Real-time Collaboration
WEBSOCKET_PORT=8080
MAX_WEBSOCKET_CONNECTIONS=1000
HEARTBEAT_INTERVAL=30
JWT_EXPIRY_HOURS=24

