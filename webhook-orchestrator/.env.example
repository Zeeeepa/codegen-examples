# Webhook Orchestrator Environment Configuration

# Application Settings
APP_NAME=Webhook Orchestrator
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql+asyncpg://webhook_user:webhook_password@localhost:5432/webhook_orchestrator
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# GitHub Configuration
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY=your-github-private-key
GITHUB_TOKEN=your-github-personal-access-token

# Codegen Configuration
CODEGEN_TOKEN=your-codegen-api-token
CODEGEN_ORG_ID=1
CODEGEN_BASE_URL=https://api.codegen.sh

# Security Configuration
SECRET_KEY=your-very-secure-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_HOSTS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# Retry Logic Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0
RETRY_MAX_DELAY=300

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30

# Webhook Processing Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_PAYLOAD_SIZE=1048576

# Task Processing Configuration
TASK_TIMEOUT=300
TASK_MAX_RETRIES=3

